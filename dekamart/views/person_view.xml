<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- dekamart.person tree view -->
    <record id="dekamart_person_view_tree" model="ir.ui.view">
        <field name="name">dekamart.person.view.tree</field>
        <field name="model">dekamart.person</field>
        <field name="arch" type="xml">
            <tree>
                <!-- SAMAIN DENGAN NAMA MODUL DI PERSON.PY CLASS PERSON -->
                <field name="name"/>
                <field name="alamat"/>
                <field name="tgl_lahir"/>
            </tree>
        </field>
    </record>

    <!-- dekamart.person form view -->
    <record id="dekamart_person_view_form" model="ir.ui.view">
        <field name="name">dekamart.person.view.form</field>
        <field name="model">dekamart.person</field>
        <field name="arch" type="xml">
            <form string="Nama">
                <sheet>
                    <group name="nama" string="Nama">
                        <field name="name"/>
                    </group>
                    
                    <group name="data" string="Data">
                    <field name="alamat"/>
                    <field name="tgl_lahir"/>                        
                    </group>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
